@article{ ISI:000284969200022,
Author = {Burger, H. and Ayasse, M. and Haberlein, C. M. and Schulz, S. and
   Dotterl, S.},
Title = {{Echium and Pontechium specific floral cues for host-plant recognition by
   the oligolectic bee Hoplitis adunca}},
Journal = {{SOUTH AFRICAN JOURNAL OF BOTANY}},
Year = {{2010}},
Volume = {{76}},
Number = {{4, SI}},
Pages = {{788-795}},
Month = {{OCT}},
Abstract = {{Flowering plants often have specific floral cues, which allow bees and
   other pollinators to differentiate between them Many bee species exhibit
   specialised associations with flowers (oligolecty) and it is Important
   for them to find and recognise their specific host plants In this study
   we compared the visual and olfactory floral cues of different Echium and
