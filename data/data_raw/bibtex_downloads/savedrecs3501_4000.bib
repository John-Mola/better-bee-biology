}

@article{ ISI:000277289400009,
Author = {Gu, Lei and Luo, Zhonglai and Zhang, Dianxiang and Renner, Susanne S.},
Title = {{Passerine Pollination of Rhodoleia championii (Hamamelidaceae) in
