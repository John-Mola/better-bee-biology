@article{ ISI:000293675400008,
Author = {Pina, Welber da C. and Aguiar, Candida M. L.},
Title = {{Trap-nesting Bees (Hymenoptera: Apidae) in Orchards of Acerola
   (Malpighia emarginata) in a Semiarid Region of Brazil}},
Journal = {{SOCIOBIOLOGY}},
Year = {{2011}},
Volume = {{58}},
Number = {{2}},
Pages = {{379-392}},
Abstract = {{The present work examines the richness, abundance of nests, and annual
   activity of bee species nesting in trap-nests at acerola orchards in a
   semiarid region near Feira de Santana, Bahia State, Brazil. Collections
   using trap-nests were made in three orchards, between October 2008 and
   September 2009. Centris analis Fabricius, Centris tarsata Smith and
   Tetrapedia diversipes Klug used the trap-nests. Two-hundred and fifty
   four nests were obtained, mostly made by C analis (n=213). All three
   species used the 5 and the 10 cm long trap-nest tubes and nesting was
   more frequent in the largest (n=189) than in the smaller (n=65) tubes.
   Most nesting activities occurred from December 2008 through April 2009.
   C. analis is considered to have significant potential for the management
   of pollination in acerola orchards of the semiarid region in Bahia
   State, due to the high abundance of its nests.}},
