@article{ ISI:000290203100043,
Author = {Ren, Zong-Xin and Li, De-Zhu and Bernhardt, Peter and Wang, Hong},
Title = {{Flowers of Cypripedium fargesii (Orchidaceae) fool flat-footed flies
   (Platypezidae) by faking fungus-infected foliage}},
