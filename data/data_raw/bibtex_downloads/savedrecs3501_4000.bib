@article{ ISI:000275635400004,
Author = {Kaiser-Bunbury, Christopher N. and Muff, Stefanie and Memmott, Jane and
   Mueller, Christine B. and Caflisch, Amedeo},
Title = {{The robustness of pollination networks to the loss of species and
   interactions: a quantitative approach incorporating pollinator behaviour}},
Journal = {{ECOLOGY LETTERS}},
Year = {{2010}},
Volume = {{13}},
Number = {{4}},
Pages = {{442-452}},
Month = {{APR}},
Abstract = {{P>Species extinctions pose serious threats to the functioning of
   ecological communities worldwide. We used two qualitative and
   quantitative pollination networks to simulate extinction patterns
   following three removal scenarios: random removal and systematic removal
   of the strongest and weakest interactors. We accounted for pollinator
   behaviour by including potential links into temporal snapshots (12
   consecutive 2-week networks) to reflect mutualists' ability to `switch'
   interaction partners (re-wiring). Qualitative data suggested a linear or
   slower than linear secondary extinction while quantitative data showed
   sigmoidal decline of plant interaction strength upon removal of the
   strongest interactor. Temporal snapshots indicated greater stability of
   re-wired networks over static systems. Tolerance of generalized networks
   to species extinctions was high in the random removal scenario, with an
   increase in network stability if species formed new interactions.
   Anthropogenic disturbance, however, that promote the extinction of the
   strongest interactors might induce a sudden collapse of pollination
   networks.}},
