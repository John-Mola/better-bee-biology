@article{ ISI:000488971400012,
Author = {Skuse, Britton and Phillippi, Aimee and Batchelder, Ellen},
Title = {{The Absence of Nosema bombi in Bumblebees (Bombus spp.) on Farms in
   Michigan}},
Journal = {{AMERICAN MIDLAND NATURALIST}},
Year = {{2019}},
Volume = {{182}},
Number = {{2}},
Pages = {{270-275}},
Month = {{OCT}},
Abstract = {{The fungal pathogen Nosema bombi impacts bumblebee fitness and is a
   factor in population declines throughout North America. Pesticides are
   also thought to contribute to declines, because they harm the innate
   immune system of insects, making them more susceptible to disease. A
   total of 232 bumblebees were collected at nine different farms across
   Michigan (U.S.A.), including farms that used pesticides and those that
   did not, in summer 2017. The bees were identified and tested for Nosema
   bombi. All bees were found to be free front N. bombi infection,
   suggesting this microsporidian may not yet have a biologically important
   impact on bumblebee populations in Michigan.}},
