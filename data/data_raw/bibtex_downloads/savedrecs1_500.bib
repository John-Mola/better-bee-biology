Title = {{Direct evidence for eudicot pollen-feeding in a Cretaceous stinging wasp
   (Angiospermae; Hymenoptera, Aculeata) preserved in Burmese amber}},
Journal = {{COMMUNICATIONS BIOLOGY}},
Year = {{2019}},
Volume = {{2}},
Month = {{NOV 7}},
Abstract = {{Angiosperms and their insect pollinators form a foundational symbiosis,
