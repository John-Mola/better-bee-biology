@article{ ISI:000497127600017,
Author = {Monberg, Rikke Juul and Howe, Andy G. and Kepfer-Rojas, Sebastian and
   Ravn, Hans Peter and Jensen, Marina Bergen},
Title = {{Vegetation development in a stormwater management system designed to
   enhance ecological qualities}},
