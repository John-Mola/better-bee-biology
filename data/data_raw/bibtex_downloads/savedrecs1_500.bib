}

@article{ ISI:000462550100005,
Author = {Tian, Mo and Ren, Yi},
Title = {{Evolutionary significance of discrete functional adaptations to
   pollinators in generalist flowers: a case study of three species of
   Ranunculus s.l. (Ranunculaceae) with distinct petal nectary scales}},
Journal = {{BOTANICAL JOURNAL OF THE LINNEAN SOCIETY}},
Year = {{2019}},
Volume = {{189}},
Number = {{3}},
Pages = {{281-292}},
Month = {{MAR}},
Abstract = {{Morphological adaptations between flowers and pollinators are thought to
   reflect natural selection by excluding ineffective pollinators and
   increasing pollination efficiency. Previous studies have reported a
   variety of tube or spur flower shapes that influence the functional fit
   between pollinator and plant. However, little is known about the open'
   flower types, which like those of Ranunuculus s.l. are interpreted as
