@article{ ISI:000398125800001,
Author = {Dolan, Amelia C. and Delphia, Casey M. and O'Neill, Kevin M. and Ivie,
   Michael A.},
Title = {{Bumble Bees (Hymenoptera: Apidae) of Montana}},
Journal = {{ANNALS OF THE ENTOMOLOGICAL SOCIETY OF AMERICA}},
