@article{ ISI:000425913000001,
Author = {Liu, X. W. and Chesters, D. and Dai, Q. Y. and Niu, Z. Q. and
   Beckschaefer, P. and Martin, K. and Zhu, C. D.},
Title = {{Integrative Profiling of Bee Communities from Habitats of Tropical
