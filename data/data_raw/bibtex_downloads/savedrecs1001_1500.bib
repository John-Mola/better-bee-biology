@article{ ISI:000426226100004,
Author = {Duester, Jellena V. and Gruber, Maria H. and Karolyi, Florian and Plant,
   John D. and Krenn, Harald W.},
Title = {{Drinking with a very long proboscis: Functional morphology of orchid bee
