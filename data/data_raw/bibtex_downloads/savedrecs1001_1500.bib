@article{ ISI:000426071300008,
Author = {Poveda Coronel, Carlos Alberto and Riano Jimenez, Diego and Aguilar
   Benavides, Lucia and Ricardo Cure, Jose},
Title = {{Efficiency of Pollination by Orphan Colonies of Bombus atratus
