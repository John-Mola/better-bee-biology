@article{ ISI:000415732500002,
Author = {Glaum, Paul},
Title = {{A theoretical basis for the study of predatory syrphid fly ecology}},
Journal = {{THEORETICAL ECOLOGY}},
Year = {{2017}},
Volume = {{10}},
Number = {{4}},
Pages = {{391-402}},
Month = {{DEC}},
Abstract = {{Predacious syrphid fly species, also known as flower flies or hover
   flies, are cosmopolitan diptera that play two important ecological
   roles: predator and pollinator. In decades past, syrphid flies were
   studied by agricultural researchers due to their larvae's ability to
   function as a biological control agent. In recent years, the global
   decline in both honey bees and various important wild bee species has
   led ecological researchers to investigate the role of syrphid fly
   pollination in both natural systems and agriculture. While these two
   roles have often been considered separately, they are rarely considered
   together in single studies. Syrphid fly population fluctuations in
   natural and agricultural systems are understudied, prompting calls for
   further study into the fundamental drivers of population dynamics of
   syrphid communities. In order to develop a deeper understanding of the
   fundamental dynamics of syrphid ecology, the present study offers a
   community model where both syrphid predation and pollination are
   incorporated into a single dynamic model. Using populations of
   predacious syrphid flies, herbivorous insects, and a shared resource
   flowering plant, the model is used to investigate community dynamics and
   persistence across different levels of plant reproductive dependence on
   syrphid pollination. Results indicate distinct levels of community
   viability across different pollination relationships as well as a
   tendency toward chaotic dynamics inherent to the trophic interactions of
   the community.}},
DOI = {{10.1007/s12080-017-0336-1}},
ISSN = {{1874-1738}},
EISSN = {{1874-1746}},
ORCID-Numbers = {{Glaum, Paul/0000-0002-7451-8369}},
Unique-ID = {{ISI:000415732500002}},
}

@article{ ISI:000417093400024,
Author = {Galindo Da Costa, Ana Carolina and Machado, Isabel Cristina},
Title = {{Pin-monomorphism in Palicourea crocea (SW.) Roem. \& Schult.
   (Rubiaceae): reproductive traits and role of floral visitors}},
Journal = {{BRAZILIAN JOURNAL OF BOTANY}},
Year = {{2017}},
Volume = {{40}},
Number = {{4}},
Pages = {{1063-1070}},
Month = {{DEC}},
Abstract = {{Although heterostyly frequently occurs in Rubiaceae, there are cases of
   distylous species with populations that have variations in their
   reproductive systems. For example, in the typically distylous genus
   Palicourea, P. crocea showed a pin-monomorphism. Considering this, the
   questions addressed in the present study were: (1) Are there other
   pin-monomorphic Palicourea crocea populations? (2) How important are
   flower visitors to the pollination of this species? (3) What is the
   compatibility system in P. crocea? In addition, we tested the hypothesis
   that P. crocea is self-compatible and autogamous that can be a result of
   a variation in the distylous pattern. To answer the questions, we
   verified the position of anthers and stigmas in flowers of other
   populations of Palicourea crocea using voucher specimens. Furthermore,
   we made focal observations to analyze the role of flower visitors and we
   made field experiments to verify the compatibility system in P. crocea.
   Among seven flower visitors species observed-four bees, one wasp, one
   butterfly and one hummingbird-the latter was considered the main
   pollinator due to its high frequency of visits at all times analyzed.
   However, the small size of the population in the study area, the
   territorial behavior of hummingbirds, and the activity of nectar robbers
   may contribute to a low pollen flow. In this situation, traits as
   self-compatibility and autogamy observed in Palicourea crocea are
   beneficial, since they maintain species fertility. This could represent
   a new evolutionary path for the reproduction of this population,
   different from that of P. crocea populations that display distinct
   floral morphs.}},
DOI = {{10.1007/s40415-017-0406-z}},
ISSN = {{0100-8404}},
EISSN = {{1806-9959}},
ResearcherID-Numbers = {{Machado, Isabel C/I-6935-2012
   Machado, Isabel C/B-6856-2011}},
Unique-ID = {{ISI:000417093400024}},
}

@article{ ISI:000413145200013,
