@article{ ISI:000429155000006,
Author = {dos Santos, Jadilla Mendes and Diniz, Debora and Santos Rodrigues,
   Tecavita Ananda and Cioffi, Marcelo de Bello and Waldschmidt, Ana Maria},
Title = {{Heterochromatin distribution and chromosomal mapping of microsatellite
   repeats in the genome of Frieseomelitta stingless bees (Hymenoptera:
