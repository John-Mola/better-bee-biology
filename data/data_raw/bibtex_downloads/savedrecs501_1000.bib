@article{ ISI:000430811100018,
Author = {Bortolotti, Laura and Luthi, Franziska and Flaminio, Simone and Bogo,
   Gherardo and Sgolastra, Fabio},
Title = {{First record of the Asiatic bee Megachile disjunctiformis in Europe}},
Journal = {{BULLETIN OF INSECTOLOGY}},
Year = {{2018}},
Volume = {{71}},
Number = {{1}},
Pages = {{143-149}},
Month = {{JUN}},
Abstract = {{Megachile disjunctiformis Cockerell 1911 (Hymenoptera Megachilidae) is
   recorded for the first time in Europe. After previous observations in
