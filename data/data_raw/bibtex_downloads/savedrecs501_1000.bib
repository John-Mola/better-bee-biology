@article{ ISI:000429089600016,
Author = {Saunders, Manu E. and Luck, Gary W.},
Title = {{Interaction effects between local flower richness and distance to
   natural woodland on pest and beneficial insects in apple orchards}},
Journal = {{AGRICULTURAL AND FOREST ENTOMOLOGY}},
Year = {{2018}},
Volume = {{20}},
Number = {{2}},
Pages = {{279-287}},
Month = {{MAY}},
Abstract = {{Local and landscape factors interact to influence animal populations
   and, ultimately, crop yields in agroecosystems. Yet few studies have
   considered interactions and trade-offs between these factors within a
   single agroecosystem. We sampled insect communities (fruit-damaging
   pests and Diptera and Hymenoptera pollinator and natural enemy taxa)
