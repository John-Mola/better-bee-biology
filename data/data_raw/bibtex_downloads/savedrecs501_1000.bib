@article{ ISI:000448760800006,
Author = {Otesbelgue, Alex and dos Santos, Charles Fernando and Blochtein, Betina},
Title = {{Queen bee acceptance under threat: Neurotoxic insecticides provoke deep
   damage in queen-worker relationships}},
