}

@article{ ISI:000455167600014,
Author = {Piot, Niels and Meeus, Ivan and Kleijn, David and Scheper, Jeroen and
   Linders, Theo and Smagghe, Guy},
Title = {{Establishment of wildflower fields in poor quality landscapes enhances
   micro-parasite prevalence in wild bumble bees}},
Journal = {{OECOLOGIA}},
Year = {{2019}},
Volume = {{189}},
Number = {{1}},
Pages = {{149-158}},
Month = {{JAN}},
Abstract = {{The current worldwide pollinator decline is caused by the interplay of
   different drivers. Several strategies have been undertaken to counteract
   or halt this decline, one of which is the implementation of wildflower
   fields. These supplementary flowers provide extra food resources and
