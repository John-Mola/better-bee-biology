@article{ ISI:000454040200011,
Author = {Santos, Anna Thiciane F. and Leal, Laura C.},
Title = {{My plant, my rules: bodyguard ants of plants with extrafloral nectaries
   affect patterns of pollinator visits but not pollination success}},
Journal = {{BIOLOGICAL JOURNAL OF THE LINNEAN SOCIETY}},
Year = {{2019}},
Volume = {{126}},
Number = {{1}},
Pages = {{158-167}},
Month = {{JAN}},
Abstract = {{Plant defence via interactions with predators of herbivores may impose
   ecological costs through the predator bodyguard's effect on pollination.
   This interference is predicted to be stronger for more aggressive
   bodyguards. We used interactions between ants and plants bearing
   extrafloral nectaries (EFNs) to evaluate whether ant bodyguards
   negatively affect pollination success and whether this interference is
   stronger for more aggressive attending ants. We measured visitation
   patterns of flowers of Turnera subulata in plants attended by four ant
   species differing in their aggressiveness and in control plants not
   attended by ants. We monitored fruit development and the number of seeds
   produced by each visited flower. Ant presence decreased the frequency of
   flower visitation, but it did not affect plant reproductive success. The
   frequency of floral visitation by butterflies was not affected by either
   ant presence or behaviour. However, the frequency and duration of floral
   visitation by bees was almost respectively three and six times lower in
   plants attended by ants. Our findings suggest that the ecological costs
   imposed by ants attending EFNs may depend on the traits of the plant's
   pollination system, being higher for plant species relying on
   pollinators that are more sensitive to ant presence.}},
