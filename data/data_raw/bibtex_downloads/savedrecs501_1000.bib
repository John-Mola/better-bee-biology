@article{ ISI:000443034500007,
Author = {Freitas, Felipe Vieira and Santos Junior, Jose Eustaquio and Santos,
   Fabricio Rodrigues and Silveira, Fernando A.},
Title = {{Species delimitation and sex associations in the bee genus Thygater,
