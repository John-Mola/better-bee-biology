@article{ ISI:000348602200020,
Author = {Santos, W. E. and Carneiro, L. T. and Alves, A. C. F. and Creao-Duarte,
   A. J. and Martins, C. F.},
Title = {{Stingless Bees (Hymenoptera: Apidae: Meliponini) Attracted to Animal
   Carcasses in the Brazilian Dry Forest and Implications for Forensic
   Entomology}},
Journal = {{SOCIOBIOLOGY}},
Year = {{2014}},
Volume = {{61}},
Number = {{4}},
Pages = {{490-493}},
Month = {{DEC}},
Abstract = {{The association of stingless bees with pig carcasses exposed in a
   Brazilian Dry Forest area were examined. Modified Shannon traps were
   settled together to collect these insects during two seasons (dry and
   rainy). 564 bees were collected, belonging to three tribes and nine
   species. The majority of bees (75.5\%) was collected during the dry
   season, and Partamona seridoensis Pedro \& Camargo (32.8\%) and
   Trigonisca sp. (20.9\%) were the most abundant species. Five
   decomposition stages were recognized, being the bloated, active and
   advanced decay the most attractive to the bees. Considerations about
   seasonal foraging and use of bees in the forensic entomology scope are
   presented.}},
