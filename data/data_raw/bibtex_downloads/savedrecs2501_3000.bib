@article{ ISI:000332835600019,
Author = {Baron, Gemma L. and Raine, Nigel E. and Brown, Mark J. F.},
Title = {{Impact of chronic exposure to a pyrethroid pesticide on bumblebees and
   interactions with a trypanosome parasite}},
