Unique-ID = {{ISI:000337604600001}},
}

@article{ ISI:000341027600007,
Author = {Packer, Laurence and Dumesh, Sheila},
Title = {{Two new species of Geodiscelis Michener \& Rozen (Hymenoptera: Apoidea:
