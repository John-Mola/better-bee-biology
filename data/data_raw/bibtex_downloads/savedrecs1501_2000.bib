@article{ ISI:000390724600059,
Author = {Moreira, Antonio A. G. and De Lima-Neto, Pedro and Caetano, Ewerton W.
   S. and Barroso-Neto, Ito L. and Freire, Valder N.},
Title = {{Computational electronic structure of the bee killer insecticide
   imidacloprid}},
Journal = {{NEW JOURNAL OF CHEMISTRY}},
Year = {{2016}},
Volume = {{40}},
Number = {{12}},
Pages = {{10353-10362}},
Month = {{DEC}},
Abstract = {{Imidacloprid is the most commonly used neonicotinoid insecticide
   worldwide. Although it presents no selectivity among insect species,
   this molecule has been implicated in the deaths of beneficial
   pollinating insects, such as bees, and in the contamination of water and
   soil for a long period of time. Knowledge of the structural and
   electronic features of the imidacloprid agrochemical is still limited;
   this knowledge is essential for understanding its mechanism of action,
