@article{ ISI:000383826400034,
Author = {McPhie, Douglas and Burrack, Hannah J.},
Title = {{Effects of microbial, organically acceptable, and reduced risk
   insecticides on Anthonomus signatus (Curculionidae: Coleoptera) in
