@article{ ISI:000394017300002,
Author = {Mawdsley, Jonathan R.},
Title = {{Taxonomy of the African large carpenter bees of the genus Xylocopa
   Latreille, 1802, subgenus Xenoxylocopa Hurd \& Moure, 1963 (
