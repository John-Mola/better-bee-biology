Author = {Felicioli, Antonio and Ambroselli, Sabrina and Cilia, Giovanni and
   Sagona, Simona},
Title = {{Parasitization of a wild and reared population of the solitary bee Osmia
   cornuta Latr. by the parasitoid Anthrax anthrax Schrank (Diptera,
