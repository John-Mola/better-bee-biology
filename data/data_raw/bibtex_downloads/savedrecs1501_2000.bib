@article{ ISI:000383469500002,
Author = {Dyer, Adrian G. and Boyd-Gerny, Skye and Shrestha, Mani and Lunau, Klaus
   and Garcia, Jair E. and Koethe, Sebastian and Wong, Bob B. M.},
Title = {{Innate colour preferences of the Australian native stingless bee
