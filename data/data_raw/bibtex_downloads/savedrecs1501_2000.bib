Journal = {{AGRICULTURAL AND FOREST ENTOMOLOGY}},
Year = {{2016}},
Volume = {{18}},
Number = {{4}},
Pages = {{419-431}},
Month = {{NOV}},
Abstract = {{1 An increasing production of annual bioenergy crops such as maize has
