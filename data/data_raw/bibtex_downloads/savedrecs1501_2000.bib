@article{ ISI:000380839100004,
Author = {Todd, Katherine J. and Gardiner, Mary M. and Lindquist, Erik D.},
Title = {{Mass Flowering Crops as a Conservation Resource for Wild Pollinators
   (Hymenoptera: Apoidea)}},
Journal = {{JOURNAL OF THE KANSAS ENTOMOLOGICAL SOCIETY}},
Year = {{2016}},
Volume = {{89}},
Number = {{2}},
Pages = {{158-167}},
Month = {{APR}},
Abstract = {{Habitat management within agroecosystems can conserve wild pollinator
   communities by providing nesting and floral resources. However,
   demarcating arable land for conservation may reduce farm income. A
   conciliatory habitat management plan thus consists of planting
   harvestable commodities which offer pollinator resources. This study's
   goal was to determine whether a single species annual flowering crop
