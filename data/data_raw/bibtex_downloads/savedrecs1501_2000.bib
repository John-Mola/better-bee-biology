}

@article{ ISI:000407553100004,
Author = {Mawdsley, Jonathan R.},
Title = {{Cladistic analysis and evolutionary relationships of Xylocopa Latreille,
   1802, subgenus Xylocopoides Michener, 1954, a New World lineage of large
