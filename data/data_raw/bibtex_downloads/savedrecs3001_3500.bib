@article{ ISI:000303539600006,
Author = {Forney, Charles F. and Javorek, Steven K. and Jordan, Michael A. and
   Vander Kloet, Sam P.},
Title = {{Floral volatile composition of four species of Vaccinium}},
Journal = {{BOTANY}},
Year = {{2012}},
Volume = {{90}},
Number = {{5}},
Pages = {{365-371}},
Month = {{MAY}},
Abstract = {{The floral volatile composition of four species of Vaccinium was
   profiled to asses the diversity of the floral chemistry within this
   genus. Flowers of Vaccinium angustifolium Aiton, Vaccinium
   varingiaefolium Miq., Vaccinium arboreum Marsh., and Vaccinium poasanum
