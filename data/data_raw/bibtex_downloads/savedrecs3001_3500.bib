@article{ ISI:000319290600002,
Author = {Giannini, Tereza Cristina and Chapman, Daniel S. and Saraiva, Antonio
   Mauro and Alves-dos-Santos, Isabel and Biesmeijer, Jacobus C.},
Title = {{Improving species distribution models using biotic interactions: a case
