@article{ ISI:000320111300003,
Author = {Rinehart, Joseph P. and Yocum, George D. and Kemp, William P. and
   Greenlee, Kendra J.},
Title = {{A Fluctuating Thermal Regime Improves Long-Term Survival of Quiescent
   Prepupal Megachile rotundata (Hymenoptera: Megachilidae)}},
