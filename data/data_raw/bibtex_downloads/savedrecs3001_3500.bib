@article{ ISI:000310888700002,
Author = {Luo, Zhong-Lai and Chen, Shi and Zhang, Dian-Xiang},
Title = {{Floral reward presentation favored the expression of male function in
   the pollen-only flower Melastoma malabathricum}},
Journal = {{JOURNAL OF SYSTEMATICS AND EVOLUTION}},
Year = {{2012}},
Volume = {{50}},
Number = {{6}},
Pages = {{488-495}},
Month = {{NOV}},
Abstract = {{Animal-pollinated plant species modulate the presentation of pollinator
   rewards to maximize reproductive success. In plants providing pollen as
   the only reward for pollinators, it is usually difficult to unravel the
   dual roles of reward presentation and the realization of male and female
   functions (pollen removal and deposition). Exploiting the two types of
   anther in the androecia of Melastoma malabathricum L., we examined
   whether the removal of pollen for reward is regulated primarily to favor
