Title = {{Schizanthus grahamii and Schizanthus hookeri. Is there any relationship
   between their anthocyanin compositions and their different pollination
   syndromes?}},
Journal = {{PHYTOCHEMISTRY}},
Year = {{2013}},
Volume = {{85}},
Pages = {{62-71}},
Month = {{JAN}},
Abstract = {{Three different pollination syndromes (bee, humming-bird and
   moth-pollination syndromes) have been described for the different
   species of the genus Schizanthus Ruiz \& Pav. (Solanaceae). Two closely
   related species from a phylogenetic point of view, Schizanthus grahamii
