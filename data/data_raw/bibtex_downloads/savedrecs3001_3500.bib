@article{ ISI:000303061600018,
Author = {Cilla, Gabriela and Rolon, Guillermo},
Title = {{Macroscopic and microscopic studies of the nests and the stages involved
   in the nesting process of Centris muralis Burmeister (Hymenoptera:
   Apidae: Centridini) bee in the adobe walls, in La Rioja, Argentina}},
Journal = {{BIOLOGIA}},
