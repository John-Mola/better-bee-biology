@article{ ISI:000302741300080,
Author = {Andersson, Georg K. S. and Rundlof, Maj and Smith, Henrik G.},
Title = {{Organic Farming Improves Pollination Success in Strawberries}},
Journal = {{PLOS ONE}},
Year = {{2012}},
Volume = {{7}},
Number = {{2}},
Month = {{FEB 15}},
Abstract = {{Pollination of insect pollinated crops has been found to be correlated
   to pollinator abundance and diversity. Since organic farming has the
   potential to mitigate negative effects of agricultural intensification
   on biodiversity, it may also benefit crop pollination, but direct
   evidence of this is scant. We evaluated the effect of organic farming on
   pollination of strawberry plants focusing on (1) if pollination success
   was higher on organic farms compared to conventional farms, and (2) if
   there was a time lag from conversion to organic farming until an effect
   was manifested. We found that pollination success and the proportion of
   fully pollinated berries were higher on organic compared to conventional
   farms and this difference was already evident 2-4 years after conversion
   to organic farming. Our results suggest that conversion to organic
   farming may rapidly increase pollination success and hence benefit the
   ecosystem service of crop pollination regarding both yield quantity and
   quality.}},
